<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Full Regression Suite" verbose="1">
    <test name="Positive login test">
        <classes>
            <class name="com.practiceautomationtest.tests.LoginTestPageAdmin.LoginTest">
                <methods>
                    <include name="positiveTestLogin"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Incorrect User Name">
        <classes>
            <class name="com.practiceautomationtest.tests.LoginTestPageAdmin.LoginTest">
                <methods>
                    <include name="incorrectUserNameTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Incorrect Password Test">
        <classes>
            <class name="com.practiceautomationtest.tests.LoginTestPageAdmin.LoginTest">
                <methods>
                    <include name="incorrectPasswordTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Add Department Test">
        <classes>
            <class name="com.practiceautomationtest.tests.DepartmentTestPageAdmin.DepartmentTest">
                <methods>
                    <include name="addDepartment"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Can not Delete Department With Position">
        <classes>
            <class name="com.practiceautomationtest.tests.DepartmentTestPageAdmin.DepartmentTest">
                <methods>
                    <include name="notAbleToDeleteDepartmentWithPosition"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Searching department using name and location filter">
        <classes>
            <class name="com.practiceautomationtest.tests.DepartmentTestPageAdmin.DepartmentTest">
                <methods>
                    <include name="searchingDepartmentUsingDepartmentNameAndLocationFilter"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Searching department using location filter only">
        <classes>
            <class name="com.practiceautomationtest.tests.DepartmentTestPageAdmin.DepartmentTest">
                <methods>
                    <include name="searchingDepartmentUsingLocationFilterOnly"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Update status from active to inactive and verify by search">
        <classes>
            <class name="com.practiceautomationtest.tests.DepartmentTestPageAdmin.DepartmentTest">
                <methods>
                    <include name="updateStatusOfDepartmentFromActiveToInactiveAndVerifyBySearch"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Redirect to department page by clicking home button">
        <classes>
            <class name="com.practiceautomationtest.tests.DepartmentTestPageAdmin.DepartmentTest">
                <methods>
                    <include name="redirectToDepartmentByClickingHomeBtn"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>